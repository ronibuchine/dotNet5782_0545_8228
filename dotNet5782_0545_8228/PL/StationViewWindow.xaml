<Window x:Class="PL.StationViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationViewWindow" Height="450" Width="600"
        Background="{StaticResource WindowBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>

        <Button Name="AddStation" 
                Content="+ Add Station" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" Width="136" 
                Height="20" Margin="232,237,0,0" 
                FontFamily="Tw Cen MT" FontSize="12"
                Visibility="Hidden" Grid.ColumnSpan="2"/>
        <ComboBox Name="WeightSelection" HorizontalAlignment="Left" Margin="232,195,0,0" VerticalAlignment="Top" Width="136" Visibility="Hidden" Grid.ColumnSpan="2" />
        <ComboBox Name="StationSelection" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Margin="232,155,0,0" Visibility="Hidden" Grid.ColumnSpan="2"/>

        <Button x:Name="Cancel" 
                Content="Cancel" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" Width="60" Height="20" 
                Click="Cancel_Click"  Margin="10,404,0,0" 
                FontFamily="Tw Cen MT" FontSize="14" FontStretch="Expanded"
                Background="{StaticResource ButtonBrush}"/>




        <StackPanel Grid.Column="0" VerticalAlignment="Top" Height="266" Margin="57,117,73,0">
            <Label Name="IDBlock" Background="LightGray" Content="{Binding Path=ID, Mode=TwoWay, StringFormat=ID: {0:#}}" Width="120" Height="20" Margin="0,20,0,0"/>
            <TextBox Name="NameBlock" Background="LightGray" Text="{Binding Path=name, Mode=TwoWay}" Width="120" Margin="0,20,0,0"/>
            <TextBlock Name="AvailableSlotsBlock" Background="LightGray" Text="{Binding Path=availableChargeSlots, Mode=TwoWay}" Margin="0,20,0,0" Width="120"/>

            <TextBlock Name="LatitudeBlock" Background="LightGray" Text="{Binding Path=latitude, Mode=TwoWay}" Width="120" Margin="0,20,0,0"/>
            <TextBlock Name="LongitudeBlock" Background="LightGray" Text="{Binding Path=longitude, Mode=TwoWay}" Width="120" Margin="0,20,0,0"/>
            <Button x:Name="DeleteStationButton"
                Width="120"
                Background="{StaticResource CancelButtonBrush}"
                Click="DeleteStationButton_Click" 
                Visibility="Visible" 
                Content="✕ Delete Station"
                FontFamily="Tw Cen MT" Foreground="LightGray" FontSize="10" Margin="0,20,0,0"
                Height="19"/>
        </StackPanel>
        <ListView Name="ChargingDroneList" Height="200" Width="250" Grid.Column="1" Margin="0,0,0,0" ItemsSource="{Binding}" MouseDoubleClick="ChargingDroneList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Drone ID" DisplayMemberBinding="{Binding Path=ID}" Width="75"/>
                    <GridViewColumn Header="Battery Level" DisplayMemberBinding="{Binding Path=battery}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Image Source="/images/charging-station.png" Margin="108,8,108,304" />
        <TextBlock Grid.Column="1" Text="Charging Drones" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,90,150,0" FontStyle="Italic" />
        <TextBlock Text="Station ID" FontStyle="Italic" VerticalAlignment="Top" Margin="83,117,160,0"/>
        <TextBlock Text="Station Name" FontStyle="Italic" VerticalAlignment="Top" Margin="83,198,135,0"/>
        <TextBlock Text="Available Chargers" FontStyle="Italic" VerticalAlignment="Top" Margin="83,158,114,0"/>
        <TextBlock Text="Latitude" FontStyle="Italic" VerticalAlignment="Top" Margin="85,231,158,0"/>
        <TextBlock Text="Longitude" FontStyle="Italic" VerticalAlignment="Top" Margin="83,269,152,0"/>


    </Grid>
</Window>
