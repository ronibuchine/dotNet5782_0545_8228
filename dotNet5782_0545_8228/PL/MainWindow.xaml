        <Button x:Name="ShowDronesButton" 
                Content="Click here to manage drones" 
                HorizontalAlignment="Left" Margin="244,282,0,0" 
                VerticalAlignment="Top" Click="ShowDronesButton_Click"
                Height="94" Width="299"
                FontSize="24"
                FontFamily="Tw Cen MT"/>
        <Image Name="XDS" Margin="288,76,302,255" Visibility="Visible">
            <Image.Source>
                <BitmapImage UriSource="images/XDS.png"/>
            </Image.Source>
        </Image>
        <Image Name="Drone" Margin="318,42,332,461" Visibility="Visible">
            <Image.Source>
                <BitmapImage UriSource="images/drone.png"/>
            </Image.Source>
        </Image>
    </Grid>
</Window>
